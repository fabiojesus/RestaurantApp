@using Recodme.Academy.RestaurantApp.WebApplication.Models.RestaurantViewModels;
@model RestaurantViewModel

<div class="card">
    <div class="card-header bg-greenish-green">
        <h2 class="float-left">
            @ViewData["Title"]
        </h2>
    </div>
    <div class="card-body">
        <div class="ml-5 mr-5">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control ml-2" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control ml-2" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="OpeningHours" class="control-label"></label>
                    <input asp-for="OpeningHours" class="form-control ml-2" />
                    <span asp-validation-for="OpeningHours" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="ClosingHours" class="control-label"></label>
                    <input asp-for="ClosingHours" class="form-control ml-2" />
                    <span asp-validation-for="ClosingHours" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="ClosingDays" class="control-label"></label>
                    <input asp-for="ClosingDays" class="form-control ml-2" />
                    <span asp-validation-for="ClosingDays" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="TableCount" class="control-label"></label>
                    <input asp-for="TableCount" class="form-control ml-2" />
                    <span asp-validation-for="TableCount" class="text-danger"></span>
                </div>
                <div class="form-group ml-4">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}